{
    // Reference for compounds settings https://code.visualstudio.com/Docs/editor/debugging#_multitarget-debugging
    "version": "0.2.0",
    "configurations": [
        {
            "name": "frontend",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "${workspaceFolder}", // current working directory 
            "program": "${workspaceFolder}/cmd/frontend",            
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "backend",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/cmd/backend",            
            "envFile": "${workspaceFolder}/.env"
        }
    ],
    "compounds": [
        {
            "name": "run_all",
            "configurations": ["backend", "frontend"]
        }
    ]
}